@{
    ViewData["Title"] = "States";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Bootstrap Table -->
    <div class="row" style="padding-top:15px">
    </div>
    <div class="card">
        <div class="card-header">
            <div class="col-md-8  float-right" style="text-align: right;float: right;">
                <button id="addStates" class="btn btn-success">
                    <i class="fas fa-plus"></i> Add States
                </button>
                <button id="importData" class="btn btn-primary">
                    <i class="fas fa-upload"></i> Import
                </button>
                <button id="exportData" class="btn btn-info">
                    <i class="fas fa-download"></i> Export
                </button>
            </div>
        </div>
    </div>
    <!-- Bordered Table -->
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-striped table-bordered text-nowrap" style="width:100%" id="StateGrid">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Country Name</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>StateCode</th>
                        <th>Created On</th>
                        <th>Modified On</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->
<form id="addStateForm">
    <div class="modal fade" id="addEditStatesModal" tabindex="-1" aria-labelledby="addEditStatesModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="padding:10px">
                <div class="modal-header">
                    <h5 class="modal-title" id="addEditStatesModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="StateId" />
                    <div class="mb-3">
                        <label for="dropdownCountry" class="form-label">Country Name</label>
                        <select id="dropdownCountry" class="form-control custom-select" autofocus required></select>
                    </div>
                    <div class="mb-3">
                        <label for="Name">Name:</label>
                        <input type="text" class="form-control" id="Name" name="Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="Description">Description:</label>
                        <input type="text" class="form-control" id="Description" name="Description" required>
                    </div>
                    <div class="mb-3">
                        <label for="StateCode">StateCode:</label>
                        <input type="text" class="form-control" id="StateCode" name="StateCode" required>
                    </div>
                </div>
                <div class="modal-footer" style="padding-top:15px">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="AddEditStates">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>



<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/app/StateController.js"></script>
<script type="text/javascript">
    $(function () {
        var ctrl = new StateController();
        ctrl.init();

    });
</script>