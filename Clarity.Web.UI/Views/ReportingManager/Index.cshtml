        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-striped table-bordered text-nowrap" style="width:100%" id="ReportingManagerGrid">
                    <thead>
                        <tr>
                            <th> Employee Id </th>
                            <th> Employee </th>
                            <th> Manager Id </th>
                            <th> Manager </th>
                            <th> Option </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
