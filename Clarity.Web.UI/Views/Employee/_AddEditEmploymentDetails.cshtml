<div class="form-row">
    <div class="col-4 mb-3">
        <label for="CompanyName" class="form-label">Company Name</label>
        <input type="text" class="form-control" id="CompanyName" name="CompanyName" autofocus />
    </div>
    <div class="col-4 mb-3">
        <label for="Address" class="form-label">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" />
    </div>
    <div class="col-4 mb-3">
        <label for="Designation" class="form-label">Designation</label>
        <input type="text" class="form-control" id="Designation" name="Designation" />
    </div>
</div>
<div class="form-row">
    <div class="col-4 mb-3">
        <label for="Reason" class="form-label">Reason</label>
        <input type="text" class="form-control" id="Reason" name="Reason" autofocus />
    </div>
    <div class="col-4 mb-3">
        <label for="ReportingManager" class="form-label">Reporting Manager</label>
        <input type="text" class="form-control" id="ReportingManager" name="ReportingManager" />
    </div>
    <div class="col-4 mb-3">
        <label for="HREmail" class="form-label">HR Email</label>
        <input type="text" class="form-control" id="HREmail" name="HREmail" />
    </div>
</div>
<div class="form-row">
    <div class="col-4 mb-3">
        <label for="Reference" class="form-label">Reference</label>
        <input type="text" class="form-control" id="Reference" name="Reference" autofocus />
    </div>
    <div class="col-4 mb-3">
        <label for="StartedOn" class="form-label">Started On</label>
        <input type="text" class="form-control" id="StartedOn" name="StartedOn" autofocus />
    </div>
    <div class="col-4 mb-3">
        <label for="EndedOn" class="form-label">Ended On</label>
        <input type="text" class="form-control" id="EndedOn" name="EndedOn" autofocus />
    </div>
</div>
<div class="form-row">
    <div class="col-4 mb-3 mt-3">
        <button type="button" class="btn btn-success" id="AddEmployement">Add</button>
    </div>
</div>
<div class="table-responsive text-nowrap">
    <table class="table table-striped table-bordered text-nowrap" style="width:100%" id="EmployementGrid">
        <thead>
            <tr>
                <th>CompanyName</th>
                <th>Designation</th>
                <th>Address</th>
                <th>Duration</th>
                <th>Reason</th>
                <th>Reporting Manager</th>
                <th>HR Email</th>
                <th>Reference</th>
            </tr>
        </thead>
    </table>
</div>