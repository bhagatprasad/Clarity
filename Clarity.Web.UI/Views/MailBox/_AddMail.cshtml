<form id="AddMailForm">
    <div class="modal fade" id="AddMailModal" tabindex="-1" aria-labelledby="AddMailModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="AddMailModalLabel">Add Mail</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="MailBoxId" />
                    <div class="form-row">
                        <div class="col-12 mb-3">
                            <label for="dropdownMessageTypes" class="form-label">Message Type</label>
                            <select id="dropdownMessageTypes" class="form-control custom-select" autofocus required></select>

                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6 mb-3">
                            <label for="Title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="Title" name="Title" placeholder="Title" autofocus required />
                        </div>
                        <div class="col-6 mb-3">
                            <label for="Subject" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="Subject" name="Subject" placeholder="Subject" autofocus required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6 mb-3">
                            <label for="Message" class="form-label">Message</label>
                            <textarea class="form-control" id="Message" name="Message" placeholder="Enter your Message" autofocus required></textarea>
                        </div>
                        <div class="col-6 mb-3">
                            <label for="HTMLMessage" class="form-label">HTML Message</label>
                            <textarea class="form-control" id="HTMLMessage" name="HTMLMessage" placeholder="Enter your Message" autofocus required></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6 mb-3">
                            <label for="Description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="Description" name="Description" placeholder="Description" autofocus required />
                        </div>
                        <div class="col-6 mb-3">
                            <div class="form-check form-switch" style="padding-top: 20px; font-size: 20px;">
                                <input class="form-check-input" type="checkbox" role="switch" id="IsForAll" />
                                <label class="form-check-label" for="IsForAll">IsForAll</label>
                            </div>

                        </div>
                    </div>
                    <div class="form-row" id="fromAndToUserSpecific">
                        <div class="col-6 mb-3">
                            <label for="FromUser" class="form-label">FromUser</label>
                            <input type="text" class="form-control" id="FromUser" name="FromUser" placeholder="FromUser" />
                        </div>
                        <div class="col-6 mb-3">
                            <label for="ToUser" class="form-label">ToUser</label>
                            <input type="text" class="form-control" id="ToUser" name="ToUser" placeholder="ToUser" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="ProcesssMail">Yes, Process</button>
                </div>
            </div>
        </div>
    </div>
</form>