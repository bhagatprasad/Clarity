@{
    ViewData["Title"] = "MailBox";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row" style="padding-top:80px">
    </div>
    <!-- Bordered Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-striped table-bordered text-nowrap" style="width:100%" id="MailBoxGrid">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Subject</th>
                            <th>Message</th>
                            <th>Message Type</th>
                            <th>Is Read</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    .form-row {
        display: inline-flex !important;
        width: 100% !important;
    }

    .col-6 {
        padding: 5px !important;
    }

    .table-condensed {
        font-size: 30px !important;
        width: 490px !important;
    }

    .dataTables_wrapper {
        width: 100%;
    }

        .dataTables_wrapper table {
            width: 100%;
            table-layout: fixed; /* Fix table layout */
        }

        .dataTables_wrapper td {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

    .list-group-item {
        position: relative;
        display: flex;
        flex-direction: column;
    }

    .message {
        float: left;
        word-wrap: break-word; /* Ensures long words will wrap */
        white-space: normal; /* Allows text to wrap onto multiple lines */
        max-width: 100%; /* Ensures the span takes up the full width of the list item */
    }

    .dataTables_scrollBody {
        overflow: hidden !important;
    }
</style>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/UserMailBoxController.js"></script>
<script type="text/javascript">
    $(function () {
        var ctrl = new UserMailBoxController();
        ctrl.init();
    });
</script>
