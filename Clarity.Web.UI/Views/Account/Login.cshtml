@model Clarity.Web.UI.Models.Authenticateuser
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<h6 class="font-weight-light">Sign in to continue.</h6>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.TextBoxFor(x=>x.username,new {@class="form-control form-control-lg"})
    </div>
    <div class="form-group">
        @Html.PasswordFor(x=>x.password,new {@class="form-control form-control-lg"})
    </div>
    <div class="mt-3">
        <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
    </div>
    <div class="my-2 d-flex justify-content-between align-items-center">
        <div class="form-check">
            <label class="form-check-label text-muted">
                <input type="checkbox" class="form-check-input"> Keep me signed in
            </label>
        </div>
        <a href="#" class="auth-link text-black">Forgot password?</a>
    </div>
    <div class="mb-2">
        <button type="button" class="btn btn-block btn-facebook auth-form-btn">
            <i class="mdi mdi-facebook me-2"></i>Connect using facebook
        </button>
    </div>
    <div class="text-center mt-4 font-weight-light">
        Don't have an account? <a href="register.html" class="text-primary">Create</a>
    </div>
}