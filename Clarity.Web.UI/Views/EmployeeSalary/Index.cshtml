@{
    ViewData["Title"] = "EmployeeSalary";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row" style="padding-top:15px">
    </div>
    <!-- Bordered Table -->
    <div class="card">
        <div class="card-header">
            <div class="col-md-8 float-left" style="text-align: right;float: right;">
                <button id="ExportData" class="btn btn-info">
                    <i class="fas fa-upload"></i> Export
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-striped table-bordered text-nowrap" style="width:100%" id="EmployeeSalaryGrid">
                    <thead>
                        <tr>
                            <th>EmployeeCode</th>
                            <th>Duration</th>
                            <th>Gross Salary</th>
                            <th>Ggross Deduction</th>
                            <th>Net Salary</th>
                            <th>STD/DAYS</th>
                            <th>WRK/DAYS</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/EmployeeSalaryController.js"></script>
<script type="text/javascript">
    $(function () {
        var ctrl = new EmployeeSalaryController();
        ctrl.init();
    });
</script>
