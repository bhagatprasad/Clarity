@model List<TaskItem>
@{
    ViewData["Title"] = "TaskItem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Bootstrap Table -->
    <div class="row" style="padding-top:15px">
    </div>
    <div class="card">
        <div class="card-header">
            <div class="col-md-8  float-right" style="text-align: right;float: right;">
                <a id="addTaskItem" class="btn btn-success" href="@Url.Action("Create","TaskItem",null)">
                    <i class="fas fa-plus"></i> Add TaskItem
                </a>
                <button id="importData" class="btn btn-primary">
                    <i class="fas fa-upload"></i> Import
                </button>
                <button id="exportData" class="btn btn-info">
                    <i class="fas fa-download"></i> Export
                </button>
            </div>
        </div>
    </div>
    <!-- Bordered Table -->
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-striped table-bordered text-nowrap" style="width:100%" id="TaskItemGrid">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Created On</th>
                        <th>Modified On</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TaskItemId</td>
                            <td>@item.Name</td>
                            <td>@item.Code</td>
                            <td>@item.CreatedOn</td>
                            <td>@item.ModifiedOn</td>
                            <td>@item.IsActive</td>
                            <td>
                                <a href="@Url.Action("Edit","TaskItem",new {TaskItemId=item.TaskItemId},null)">
                                    Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->
