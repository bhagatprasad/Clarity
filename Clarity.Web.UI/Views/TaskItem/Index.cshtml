
@{
    ViewData["Title"] = "TaskItem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Bootstrap Table -->
    <div class="row" style="padding-top:15px">
    </div>
    <div class="card">
        <div class="card-header">
            <div class="col-md-8  float-right" style="text-align: right;float: right;">
                
                <button id="addTaskItem" class="btn btn-success">
                    <i class="fas fa-plus"></i> Add TaskItem
                </button>
                <button id="importData" class="btn btn-primary">
                    <i class="fas fa-upload"></i> Import
                </button>
                <button id="exportData" class="btn btn-info">
                    <i class="fas fa-download"></i> Export
                </button>
            </div>
        </div>
    </div>
    <!-- Bordered Table -->
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-striped table-bordered text-nowrap" style="width:100%" id="TaskItemsGrid">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Created On</th>
                        <th>Modified On</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->
<form id="addTaskItemForm">
    <div class="modal fade" id="addEditTaskItemModal" tabindex="-1" aria-labelledby="addEditTaskItemModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addEditTaskItemModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <input type="hidden" id="TaskItemId" />
                    <div class="mb-3">
                        <label for="Name">Name:</label>
                        <input type="text" class="form-control" id="Name" name="Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="Description">Code:</label>
                        <input type="text" class="form-control" id="Code" name="Code" required>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" id="AddEditTaskItem">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

<style>
    .mb-3 {
        padding: 10px !important;
    }
</style>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/TaskItemController.js"></script>
<script type="text/javascript">
    $(function () {
        var ctrl = new TaskItemController();
        ctrl.init();
    });
</script>