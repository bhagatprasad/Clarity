@model TaskItem
@{
    ViewData["Title"] = "Edit Task item";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Bootstrap Table -->
    <div class="row" style="padding-top:15px">
    </div>
    <div class="card">
        <div class="card-header">
            <div class="col-md-8  float-right" style="text-align: right;float: right;">
                <a id="addTaskItem" class="btn btn-success" href="@Url.Action("Create","TaskItem",null)">
                    <i class="fas fa-plus"></i> Add TaskItem
                </a>
                <button id="importData" class="btn btn-primary">
                    <i class="fas fa-upload"></i> Import
                </button>
                <button id="exportData" class="btn btn-info">
                    <i class="fas fa-download"></i> Export
                </button>
            </div>
        </div>
    </div>
    <!-- Bordered Table -->
    <div class="card-body">
        @using (Html.BeginForm("Edit", "TaskItem", FormMethod.Post))
        {
            @Html.HiddenFor(x=>x.TaskItemId)
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="Name">Name</label>
                @Html.TextBoxFor(x=>x.Name ,new {@class="form-control",placeholder="Task item Name"})
            </div>
            <div class="form-group">
                <label for="Code">Code</label>
                @Html.TextBoxFor(x=>x.Code ,new {@class="form-control",placeholder="Task Item Code"})
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
</div>